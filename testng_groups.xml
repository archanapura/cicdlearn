<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Selenium Automation Suite" >
    <test name="Selenium Tests" >
        <parameter name="browser" value="Chrome"/>
        <groups>
            <run>
                <exclude name="smoke"/>
                <include name="regression"/>
                <exclude name="sanity"/>
            </run>
        </groups>
        <classes>
            <!-- Replace with your actual test class -->
            <class name="org.example.MainTest"/>
            <class name="org.example.SecondTest"/>
            <class name="org.example.ThirdTest"/>
        </classes>
    </test>
</suite>
